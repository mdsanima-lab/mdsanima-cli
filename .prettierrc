{
  "endOfLine": "lf",
  "printWidth": 80,
  "semi": true,
  "singleQuote": false,
  "tabWidth": 4,
  "trailingComma": "es5",
  "overrides": [
    {
      "files": "*.md",
      "excludeFiles": "CHANGELOG.md",
      "options": {
        "parser": "markdown",
        "arrowParens": "always",
        "bracketSpacing": true,
        "endOfLine": "lf",
        "printWidth": 80,
        "proseWrap": "always",
        "semi": false,
        "singleQuote": false,
        "tabWidth": 2,
        "trailingComma": "none",
        "useTabs": false
      }
    },
    {
      "files": [
        ".clang*",
        ".eslint*",
        ".prettier*",
        "*.json",
        "*.yaml",
        "*.yml",
        "CHANGELOG.md"
      ],
      "options": {
        "tabWidth": 2
      }
    }
  ]
}
